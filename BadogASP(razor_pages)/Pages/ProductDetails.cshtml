@page "{id:int}"
@model BadogASP_razor_pages_.Pages.ProductDetailsModel
@{
    ViewData["Title"] = Model.Product?.Name ?? "Product Not Found";
}

<div class="container my-5">
    @if (Model.Product != null)
    {
        <div class="row">
            <div class="col-md-6">
                <img src="/Public/@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid rounded" />
            </div>
            <div class="col-md-6">
                <h1>@Model.Product.Name</h1>
                <h4 class="text-success">$@Model.Product.Price</h4>
                @if (Model.Product.DiscountPrice != null)
                {
                    <h5 class="text-muted"><del>$@Model.Product.DiscountPrice</del></h5>
                }
                <p class="mt-4">@Model.Product.Description</p>
                <div class="mt-3">
                    <button class="btn btn-primary btn-lg">Add to Cart</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <h1 class="text-center text-danger">Product Not Found</h1>
    }
</div>
